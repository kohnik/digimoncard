mixin Header(data)
  header.header
    .wr-section
      a.header__logo(href='index.html')
        img.header__logo-img(src="img/logo.png", alt="logo")
      nav.header__nav
        ul.header__list-desktop
          li.header__item.header__dropdown
            span.header__item-link.header__arrow-down
              svg.header__loupe(role="img")
                use(xlink:href="img/sprite-svg.svg#" + "loupe")
              span.header__link-text!=data.decks
            ul.header__dropdown-child
              li.header__item
                a.header__item-hover(href="")!="Deck Search"
              li.header__item
                a.header__item-hover(href="")!="Deck Builder"
              li.header__item
                a.header__item-hover(href="")!="Most Popular"
              li.header__item
                a.header__item-hover(href="")!="Featured Builders"
            .header__line
          each item in data.items
            li.header__item.header__dropdown
              if item.arrow
                a.header__item-link.header__arrow-down
                  span.header__link-text!=item.name
                ul.header__dropdown-child
                  li.header__item
                    a.header__item-hover(href="")!="Articles"
                  li.header__item
                    a.header__item-hover(href="")!="Most Popular"
                .header__line
              else
                a.header__item-link
                  span.header__link-text!=item.name
        .header__menu-mobile
          .header__menu-button
            svg.header__menu-icon(role="img")
              use(xlink:href="img/sprite-svg.svg#" + "Menu")
            svg.header__menu-icon.header__cross(role="img")
              use(xlink:href="img/sprite-svg.svg#" + "cross")
          ul.header__list-mobile
            li.header__item.header__dropdown-mobile
              a.header__item-link.header__arrow-down
                svg.header__loupe(role="img")
                  use(xlink:href="img/sprite-svg.svg#" + "loupe")
                span.header__link-text!=data.decks
                img.header__arrow-black.header__arr(src="img/arrow_down_black.svg", alt="arrow_down_black")
                img.header__arrow-blue.header__arr(src="img/arrow_down_blue.svg", alt="arrow_down_blue")
              ul.header__dropdown-child-mobile
                li.header__item
                  a.header__item-hover(href="")!="Deck Search"
                li.header__item
                  a.header__item-hover(href="")!="Deck Builder"
                li.header__item
                  a.header__item-hover(href="")!="Most Popular"
                li.header__item
                  a.header__item-hover(href="")!="Featured Builders"
              .header__line
            each item in data.items
              li.header__item.header__dropdown-mobile
                if item.arrow
                  a.header__item-link.header__arrow-down
                    span.header__link-text!=item.name
                    img.header__arrow-black.header__arr(src="img/arrow_down_black.svg", alt="arrow_down_black")
                    img.header__arrow-blue.header__arr(src="img/arrow_down_blue.svg", alt="arrow_down_blue")
                  ul.header__dropdown-child-mobile
                    li.header__item
                      a.header__item-hover(href="")!="Articles"
                    li.header__item
                      a.header__item-hover(href="")!="Most Popular"
                  .header__line
                else
                  a.header__item-link
                    span.header__link-text!=item.name
      a.header__login
        img.header__login-icon(src="img/login.png", alt='login')
        span.header__login-text!=data.loginText
